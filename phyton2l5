import turtle

class TurtleRacer:
  def __init__(self, kleur):
    self.Turtle = turtle.Turtle()
    self.Turtle.color(kleur)
    self.Turtle.shape("turtle")
    self.Turtle.penup()
    self.Turtle.goto(-200, 200)
    self.Turtle.pendown()
    

racers = [
    TurtleRacer("red"),
    TurtleRacer("blue"),
    TurtleRacer("green")
]














